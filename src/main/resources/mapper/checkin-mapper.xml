<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="br.com.fiap.pulsecheck.mapper.CheckinMapper">

    <resultMap id="UsersResult" type="br.com.fiap.pulsecheck.dto.CheckinDto">
        <id property="user_id" column="user_id"/>
        <result property="mood" column="mood"/>
        <result property="note" column="note"/>
    </resultMap>

    <select id="getCheckinByUserId" parameterType="java.lang.Integer" resultMap="UsersResult">
        SELECT user_id, mood, note
        FROM checkins
        WHERE user_id = #{id}
    </select>

</mapper>
