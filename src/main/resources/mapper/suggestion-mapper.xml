<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="br.com.fiap.pulsecheck.mapper.SuggestionMapper">

    <resultMap id="SuggestionResult" type="br.com.fiap.pulsecheck.model.Suggestion">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="mood_target" column="mood_target"/>
    </resultMap>

    <select id="getSuggestionById" parameterType="java.lang.Integer" resultMap="SuggestionResult">
        SELECT id, title, description, mood_target
        FROM suggestions
        WHERE mood_target = #{id}
    </select>

</mapper>
