<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="br.com.fiap.pulsecheck.mapper.UserMapper">

    <insert id="createUser"
            parameterType="br.com.fiap.pulsecheck.model.Users"
            useGeneratedKeys="true"
            keyProperty="id">

        INSERT INTO users (
            email,
            password_hash,
            name,
            department_id,
            role,
            active
        )
        VALUES (
                   #{email},
                   #{password_hash},
                   #{name},
                   #{department_id},
                   #{role},
                   #{active}
               )
    </insert>

</mapper>
